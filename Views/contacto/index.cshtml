@model appproy.Models.Contacto

@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4"><b>Contactenos</b></h1>

    <form asp-controller="Contacto" asp-action="Create">
        <label asp-for="name" class="form-label"></label>
        <input asp-for="name" class="form-control form-control-sm" type="text" placeholder="Escribe un Nombre" aria-label=".form-control-sm" />
        <br>
        <label asp-for="email" class="control-label"></label>
        <input asp-for="email" class="form-control" placeholder="Escribe tu Correo"/>
        <br>
        <label asp-for="subject" class="control-label"></label>
        <input asp-for="subject" class="form-control" Placeholder="Escribe tu Asunto"/>
        <br>
        <label asp-for="comment" class="control-label"></label>
        <input asp-for="comment" class="form-control" Placeholder="Escribe tu Comentario"/>
        <br>
        <div class="form-group">
           <button type="button" class="btn btn-secondary btn-lg">Enviar</button>
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-area="" asp-action="Index">Volver al inicio</a>
    </div>
</div>