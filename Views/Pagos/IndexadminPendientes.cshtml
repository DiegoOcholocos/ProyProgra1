
@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Pagos  Mensuales Pendientes de revision";  
}
<h1>@ViewData["Title"]</h1>

<div class="navbar">
    <div class="col">
      <a class="btn btn-info" asp-controller="MenuAdmin" asp-action="Menupagos">Volver al Menu</a>
    </div>
    <div class="col">
      <a class="btn btn-info" asp-controller="Pagos" asp-action="Create">Crear</a>
    </div>
    <div class="col-md-1">
      <p class="d-inline">BUSCADOR:</p>
    </div>
    <div class="col-md-6">
        <form asp-controller="Pagos" asp-action="indexadminPendientes">
        <div class="col-3">
          <input type="text"  class="form-control" placeholder="Curso" aria-label="searchString" name="searchString"/>
        </div>
        <div class="col-3">
          <input type="text"  class="form-control" placeholder="Mes" aria-label="searchString2" name="searchString2"/>
        </div>
        <div>
          <input type="submit" value="Buscar" class="btn btn-primary "/>
        </div>         
        </form>
    </div>
</div>

  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (Pagos item in Model.elementosDatos){
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="370" height="350"
                       src="@item.Foto_recibo" alt="@item.Foto_recibo"  />
                  </div>
                </div>
                <div class="card-body">
                  <p class="card-text"><small class="text-muted">Mes: @Html.DisplayFor(modelItem => item.Mes_Matricula), Año: @Html.DisplayFor(modelItem => item.Año)</small></p>
                  <h5 class="card-title">Codigo del Recibo: @Html.DisplayFor(modelItem => item.Codigo_recibo)</h5>
                  <h4 class="card-title">Curso:</h4>
                  <h4 class="card-title">@Html.DisplayFor(modelItem => item.Curso)</h4>
                  
                  <p class="card-text" style="font-size: 24px">Nombre: @Html.DisplayFor(modelItem => item.Name ) @Html.DisplayFor(modelItem => item.LastName )</p>
                  <p class="card-text" style="font-size: 24px">Dni: @Html.DisplayFor(modelItem => item.DNI )</p>
                  <p class="card-text" style="font-size: 24px">Correo: @Html.DisplayFor(modelItem => item.Monto)</p>
                  <p class="card-text" style="font-size: 24px">Telefono: @Html.DisplayFor(modelItem => item.Celular)</p>
                  <h4 class="card-title"> Status: @Html.DisplayFor(modelItem => item.Status)</h4>
                  
                  <a class="btn btn-info" asp-controller="Pagos" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                  <a class="btn btn-info" asp-controller="Pagos" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                  <a class="btn btn-info" asp-controller="Pagos" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                  <a class="btn btn-info" asp-controller="Pagos" asp-action="EditSimple" asp-route-id="@item.Id">Edit STATUS</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>